<p style="color: green"><%= notice %></p>


<div class="card" style="width: 28rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name %>
    <%= @friend.last_name %></h5>
    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
    <p class="card-text"><%= @friend.email %> </p>
    <p class="card-text"><%= @friend.phone %> </p>
    <p class="card-text"><%= @friend.twitter %></p>
    
    <%= link_to "Edit this friend", edit_friend_path(@friend) %> |
    <%= link_to "Back to friends", friends_path %>
    

    <%= button_to "Destroy this friend", @friend, method: :delete, class:"btn btn-danger" %>
  </div>
</div>
